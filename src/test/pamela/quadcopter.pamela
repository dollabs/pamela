(defpclass qc []
  :meta {:version "0.2.1"
         :doc "The Plant API"}
  :methods [(defpmethod location
              {:doc    "Move quadcopter to location lat (WGS84), lon (WGS84), alt (meters), yaw (degrees from north)"}
              [lat lon alt yaw])
            (defpmethod wp1
              {:doc    "Waypoint 1"
               :bounds [10 50]}
              []
              (location 42.445370 -71.227891 1.0 80))
            (defpmethod wp2
              {:doc    "Waypoint 2"
               :bounds [10 50]}
              []
              (location 42.445435 -71.227843 2.0 170))
            (defpmethod wp3
              {:doc    "Waypoint 3"
               :bounds [10 50]}
              []
              (location 42.445389 -71.227734 3.0 260))
            (defpmethod wp4
              {:doc    "Waypoint 4"
               :bounds [10 50]}
              []
              (location 42.445327 -71.227788 4.0 350))
            ])

(defpclass qc-waypoints [qc1 qc2 qc3]
  :meta {:version "0.2.1"
         :doc "Quadcopter test waypoints"}
  :methods [(defpmethod waypoints
              {:doc "QC waypoints for 3 quad copters"}
              []
              (parallel
                (sequence
                  (qc1.location :bounds [5 20] 42.445370 -71.227891 1.0 80)
                  (qc1.location :bounds [5 20] 42.445435 -71.227843 2.0 170)
                  (qc1.location :bounds [5 20] 42.445389 -71.227734 3.0 260)
                  (qc1.location :bounds [5 20] 42.445327 -71.227788 4.0 350)
                  (qc1.location :bounds [5 20] 42.445370 -71.227891 1.0 80))
                (sequence
                  (qc2.wp2)
                  (qc2.wp3)
                  (qc2.wp4)
                  (qc2.wp1)
                  (qc2.wp2))
                (sequence
                  (qc3.wp3)
                  (qc3.wp4)
                  (qc3.wp1)
                  (qc3.wp2)
                  (qc3.wp3))))
            ])

(defpclass qc-demo []
  :meta {:version "0.2.0"
         :depends [[qc "0.2.1"]
                   [qc-waypoints "0.2.1"]]
         :doc "Quadcopter test waypoints"}
  :fields {:qc1 (qc :id "qc1" :interface "RMQ") ;;Note that this map (:id and :interface) is implicit
           :qc2 (qc :id "qc2" :interface "ZMQ")
           :qc3 (qc :id "qc3") ;this uses the default :interface (i.e., RMQ)
           :qc-waypoints (qc-waypoints qc1 qc2 qc3)})
