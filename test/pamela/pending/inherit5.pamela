;; inheritance example: inheriting transitions (same signatures)

(defpclass a []
  :modes [:on :off :fail]
  :transitions {:off:on {:pre :off :post :on
                         :doc "turning on"}
                :on:off {:pre :on :post :off
                         :doc "turning off"}
                :*:fail {:probability 0.0000001
                         :doc "spontaneous failure"}})

(defpclass b []
  :fields {:brand "DOLL"}
  :modes [:on :off :fail]
  :transitions {:off:on {:pre :off :post :on
                         :doc "turning on"}
                :on:off {:pre :on :post :off
                         :doc "turning off"}
                :*:fail {:probability 0.0000001
                         :doc "spontaneous failure"}})

(defpclass c []
  :inherit [a b]

  ;; inherited fields
  ;; :fields {:brand "DOLL"}

  ;; inherited modes
  ;; :modes [:on :off :fail]

