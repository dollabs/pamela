;; inheritance example: inheriting transitions (different signatures)

(defpclass a []
  :modes [:on :off :fail]
  :transitions {:off:on {:pre :off :post :on
                         :doc "turning on"}
                :on:off {:pre :on :post :off
                         :doc "turning off"}
                :*:fail {:probability (lvar "pfa" 0.01)
                         :doc "spontaneous failure"}})

(defpclass b []
  :fields {:brand "DOLL"}
  :modes [:on :off :fail]
  :transitions {:off:on {:pre :off :post :on
                         :doc "turning on"}
                :on:off {:pre :on :post :off
                         :doc "turning off"}
                :*:fail {:probability (lvar "pfb" 0.0000001)
                         :doc "spontaneous failure"}})

(defpclass c []
  :inherit [a b]

  ;; inherited fields
  ;; :fields {:on true
  ;;          :off true
  ;;          :fail true
  ;;          :brand "DOLL"}

  ;; inherited modes
  ;; :modes [:on :off :fail]

  ;; transitions NOT inherited due to different signatures!
  :transitions {:off:on {:pre :off :post :on
                         :doc "turning on"}
                :on:off {:pre :on :post :off
                         :doc "turning off"}
                :*:fail {:probability (+ (lvar "pfa") (lvar "pfb"))
                         :doc "spontaneous failure"}}
  )
