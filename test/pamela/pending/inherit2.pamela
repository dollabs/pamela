;; inheritance example: inheriting modes

(defpclass a []
  :fields {:breathing true}
  :modes {:alive (= :breathing true)
          :dead (= :breathing false)}

(defpclass b []
  :fields {:temperature 25}
  :modes {:alive (> :temperature 0)
          :dead (= :temperature 0)}

(defpclass c []
  :inherit [a b]

  ;; inherited fields
